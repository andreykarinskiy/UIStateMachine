<UserControl x:Class="UIStateMachine.Views.MacroPlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UIStateMachine.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:mvvm="http://prismlibrary.com/"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mvvm:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <Button Command="{Binding Play}">Play</Button>
        <Button Command="{Binding Stop}">Stop</Button>
        <Button Command="{Binding ToRecorder}">to recorder</Button>
    </StackPanel>
</UserControl>
