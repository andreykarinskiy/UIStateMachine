<UserControl x:Class="UIStateMachine.Views.MacroRecorderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UIStateMachine.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <Button Command="{Binding Start}">Start</Button>
        <Button Command="{Binding Pause}">Pause</Button>
        <Button Command="{Binding Stop}">Stop</Button>
    </StackPanel>
</UserControl>
